{
    "scopeName": "source.glass",
    "patterns": [
        {
            "name": "comment.line.double-slash.glass",
            "match": "//.*$"
        },
        {
            "name": "storage.type.glass",
            "match": "\\b(let|function|true|false)\\b"
        },
        {
            "name": "keyword.control.glass",
            "match": "\\b(if|else|for|while|return)\\b"
        },
        {
            "name": "keyword.operator.glass",
            "match": "(\\+|\\-|\\*|\\/|=)"
        },
        {
            "name": "string.quoted.double.glass",
            "match": "\"([^\"]*)\""
        },
        {
            "name": "constant.numeric.glass",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "support.function.call.glass",
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
            "name": "constant.other.placeholder",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
    ],
    "repository": {},
    "fileTypes": [
        ".glass"
    ],
    "name": "Glass",
    "uuid": "glass"
}